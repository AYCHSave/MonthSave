.projects-header
  %h3 Causas
  = link_to 'Adicionar Causa', new_project_path, { class: 'waves-effect waves-light btn' }

= render 'projects/search'
.projects-list.masonry-layout
  - @projects.each do |project|
    = link_to project do
      .masonry-layout-panel
        .masonry-layout-panel-content
          .card
            .project-image-container.card-image
              = image_tag project.image_url, class: 'project-image'
            .project-content.card-content
              .project-title.card-title
                %span
                  = project.title
                .chip.lime.accent-4
                  = "R$ #{project.total_contributed}"
              .card-description= project.description
